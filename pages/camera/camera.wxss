/* pages/camera/camera.wxss */
page {
  background-color: #000000;
}

.camera-container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.camera {
  width: 100vw;
  height: 100vw;
}

.above-img {
  position: absolute;
  width: 100vw;
  height: 100vw;
  opacity: 0.5;
}

.bottom-bar {
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 300rpx;
}

.button-shot {
  width: 180rpx;
  height: 180rpx;
  border-radius: 90rpx;
  background-color: #f3f9f1;
}