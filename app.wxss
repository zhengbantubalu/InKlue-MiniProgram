/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.char-list {
  display: flex;
  flex-wrap: wrap;
  padding-left: 20rpx;
  padding-right: 10rpx;
  padding-bottom: 10rpx;
}

.char-card {
  flex: 0 0 calc(33.33% - 10rpx);
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 280rpx;
  margin-top: 10rpx;
  margin-right: 10rpx;
  border-radius: 20rpx;
  background-color: white;
}

.char-img {
  width: 200rpx;
  height: 200rpx;
  margin-top: 20rpx;
}

.char-name {
  display: flex;
  align-items: center;
  height: 60rpx;
  font-size: small;
}